<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gagan.secondassignmentrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Second Assignment"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gagan.secondassignmentrecyclerview.Activity.MainActivity"></activity>
        <activity android:name="com.gagan.secondassignmentrecyclerview.Activity.ClassDisplaySpinner" />
        <activity android:name="com.gagan.secondassignmentrecyclerview.Activity.ClassFormSpinner" />
        <activity android:name="com.gagan.secondassignmentrecyclerview.Activity.SecondActivity"
            android:parentActivityName="com.gagan.secondassignmentrecyclerview.Activity.MainActivity"
            />
        <activity android:name="com.gagan.secondassignmentrecyclerview.Activity.ClassDashboard">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>